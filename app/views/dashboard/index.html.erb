<h1>Dashboard</h1>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <table class="table">
          <tr>
            <td>Total de pagamentos</td>
            <td class="text-end"><%= number_to_currency(@total_payments) %></td>
          </tr>
          <tr>
            <td>Total de débitos</td>
            <td class="text-end"><%= number_to_currency(@total_debts) %></td>
          </tr>
          <tr>
            <td>Saldo</td>
            <td class="text-end"><%= number_to_currency(@balance) %></td>
          </tr>
        </table>

        <h5 class="card-title">Maior saldo</h5>
        <table class="table">
          <tr>
            <td><%= @top_person&.name %></td>
            <td class="text-end"><%= number_to_currency(@top_person&.balance) %></td>
          </tr>
        </table>

        <h5 class="card-title">Menor saldo</h5>
        <table class="table">
          <tr>
            <td><%= @bottom_person&.name %></td>
            <td class="text-end"><%= number_to_currency(@bottom_person&.balance) %></td>
          </tr>
        </table>

        <h5 class="card-title">Top 10 Devedores 100k+</h5>
        <table class="table">
          <% @expensive_debts.each do |debt| %>
          <tr>
            <td><%= debt.person.name %></td>
            <td><%= number_to_currency(debt.amount) %></td>
            </tr>
          <% end %>
        </table>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Associados</h5>
        <%= pie_chart @active_people_pie_chart %>
      </div>
    </div>
  </div>

  <div class="col-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Meus últimos cadastros</h5>
        <ul>
          <% @my_people.each do |person| %>
            <li><%= person.name %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="row mt-2">
  <div class="col-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Últimos débitos</h5>
        <%= line_chart @last_debts %>
      </div>
    </div>
  </div>

  <div class="col-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Últimos pagamentos</h5>
        <%= line_chart @last_payments %>
      </div>
    </div>
  </div>
</div>