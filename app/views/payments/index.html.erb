<%= notice %>

<h1>Pagamentos</h1>

<%= link_to new_payment_path, class: 'btn btn-light btn-sm' do %>
  <i class="bi bi-plus"></i>
  Novo pagamento
<% end %>

<%= will_paginate @payments %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>CPF/CNPJ</th>
      <th>Nome</th>
      <th>Telefone</th>
      <th>Ativo</th>
      <th>Saldo/DÃ©bito</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.person.national_id %></td>
        <td><%= payment.person.name %></td>
        <td><%= payment.person.phone_number %></td>
        <td class="text-center align-middle">
          <%= person_status_icon(payment.person) %>
        </td>
        <td class="text-end align-middle">
          <%= number_to_currency(payment.person.balance) %>
        </td>
        <td class="text-center align-middle">
          <%= link_to "Visualizar pagamento", payment %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @payments %>